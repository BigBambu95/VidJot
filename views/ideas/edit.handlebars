  <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}


<div class="card card-body">
  <h3>Изменить видео идею</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">
        Заголовок
      </label>
      <input type="text" class="form-control" name="title" id="title" value="{{idea.title}}">
    </div>
    <div class="form-group">
      <label for="details">Описание</label>
      <textarea name="details" class="form-control" id="details">{{idea.details}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Изменить</button>
  </form>
</div>